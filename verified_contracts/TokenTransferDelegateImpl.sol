        uint a,&#13;
        uint b&#13;
        )&#13;
        internal&#13;
        pure&#13;
        returns (uint c)&#13;
    {&#13;
        c = a * b;&#13;
        require(a == 0 || c / a == b);&#13;
    }&#13;
    function sub(&#13;
        uint a,&#13;
        uint b&#13;
        )&#13;
        internal&#13;
        pure&#13;
        returns (uint)&#13;
    {&#13;
        require(b &lt;= a);&#13;
        return a - b;&#13;
    }&#13;
    function add(&#13;
        uint a,&#13;
        uint b&#13;
        )&#13;
        internal&#13;
        pure&#13;
        returns (uint c)&#13;
    {&#13;
        c = a + b;&#13;
